{
  "manifest_version": 3,
  "name": "Google Background Changer",
  "version": "1.0",
  "description": "Changes the background of google.com every time you visit the page.",
  "permissions": [
    "tabs",
    "https://www.google.com/*"
  ],
  "icons": {
    "48": "icon-48.png"
  },
  "action": {
    "default_icon": "icon-48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
